@model ParkedVehicleViewModel


@{
    ViewData["Title"] = "Select a vehicle type that you want to park";
}

<h1>Select a vehicle type that you want to park</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>


<form asp-action="Create" asp-controller="ParkedVehicles" method="get">
    <div class="input-group mb-3">
@*        <input type="text" class="form-control" asp-for="Title" placeholder="Search on title..." />
*@
        <div class="input-group-append">
            <select class="form-control" asp-for="Type" asp-items="@Model.VehicleTypes">
                <option selected="selected" value="">Please select vehicle type</option>
            </select>
        </div>
        <div class="input-group-append">
            <button type="submit" class="btn btn-primary"><i class="fa fa-search">&emsp;Search</i></button>
        </div>
    </div>
</form>





